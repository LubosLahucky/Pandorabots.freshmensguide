            <think><set name="topic">registration</set></think>
            <srai>WHEN DOES IT START</srai>
        </template>
    </category>
    
    <category>
        <pattern>^ HAVE TO REGISTER ^</pattern>
        <template><srai><star/> NEED REGISTRATION <star index="2"/></srai></template>
    </category>
    
    <category>
        <pattern>^ TO REGISTER ^</pattern>
        <template><srai><star/> REGISTRATION <star index="2"/></srai></template>
    </category>

    <category>
        <pattern>* A REGISTRATION ^</pattern>
        <template>
            <think><set name="topic">registration</set></think>
            <srai><star/> IT <star index="2"/></srai>
        </template>
