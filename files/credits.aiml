        <template>
            <srai><star/> CREDITS <star index="2"/> NEED <star index="3"/></srai>
        </template>
    </category>
    
    <category>
        <pattern>* CREDITS * HAVE TO EARN ^</pattern>
        <template>
            <srai><star/> CREDITS <star index="2"/> NEED <star index="3"/></srai>
