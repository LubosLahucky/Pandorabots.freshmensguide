        <template>
            <srai><star/> CREDITS <star index="2"/> NEED <star index="3"/></srai>
        </template>
    </category>
    
    <category>
        <pattern>* CREDITS * NEED ^</pattern>
        <template>
            <think><set name="topic">credits</set></think>
            <srai><star/> OF THEM <star index="2"/> NEED <star index="3"/></srai>
        </template>
    </category>
    
    <category>
        <pattern>* EARN CREDITS ^</pattern>
        <template>
            <think><set name="topic">credits</set></think>
            <srai><star/> EARN THEM <star index="2"/></srai>
        </template>
    </category>
    
    <category>
        <pattern>HOW * GET CREDITS ^</pattern>
        <template>
            <srai><star/> EARN CREDITS <star index="2"/></srai>
        </template>
    </category>
    
